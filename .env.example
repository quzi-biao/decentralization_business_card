# n8n Configuration
# Copy this file to .env and fill in your actual values

# n8n Server URL (primary)
N8N_BASE_URL=https://your-n8n-server.com

# n8n API Key
# Generate this in n8n: Settings > API > Create API Key
N8N_API_KEY=your-n8n-api-key-here

# n8n Webhook Paths and Workflow IDs
N8N_AGENT_WEBHOOK_PATH=your-agent-webhook-path
N8N_AGENT_WORKFLOW_ID=your-agent-workflow-id
N8N_API_KEY_WORKFLOW_ID=your-api-key-workflow-id
N8N_API_KEY_WEBHOOK_PATH=your-api-key-webhook-path
N8N_SPEECH_TO_TEXT_WORKFLOW_ID=your-speech-to-text-workflow-id
N8N_SPEECH_TO_TEXT_WEBHOOK_PATH=speech-to-text

# MinIO Configuration (Optional - for cloud storage)
MINIO_ENDPOINT=your-minio-endpoint.com
MINIO_PORT=9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_USE_SSL=true
MINIO_BUCKET_NAME=business-cards
